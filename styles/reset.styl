// Box sizing, margin, padding
*
	box-sizing border-box
	margin 0
	padding 0
iframe
img
video
	box-sizing content-box

// Borders
button
iframe
	border 0
table
	border-collapse collapse // removes artificial spacing between cells

// Font
button
input
	font inherit

// Rendering
html
	font-feature-settings 'kern'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale