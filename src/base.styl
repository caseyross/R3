*
	box-sizing border-box
html
	font-size 25% // 1rem = 4px
body
	margin 0
	height 100vh
	// font
	font 400 14px/1.6 'Arial'
	letter-spacing 0.02em
	font-feature-settings 'kern'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	// colors
	--white white
	--gainsboro gainsboro
	--lightgray lightgray
	--black black
	--orangered orangered
	--opcolor cornflowerblue
	--modcolor darkseagreen
	--admcolor orangered
	--vipcolor rebeccapurple
	&.theme-dark
		--white black
		--gainsboro #333
		--black white
	background var(--white)
	color var(--black)
a
	color inherit
	text-decoration none
address
	font-style normal
button
	padding 0
	border 0
	font inherit
	cursor pointer
h1, h2, h3, h4, h5, h6
	margin 0
figure,
menu,
ol, ul
	margin 0
	padding 0
ol, ul
	list-style none
p
	margin 0
iframe
	display block
	border 0
img
	display block