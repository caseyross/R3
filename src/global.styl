*
	box-sizing border-box
html
	font-size 25% // 1rem = 4px
body
	margin 0
	height 100vh
	// font
	font 400 14px/1.6 'Arial'
	letter-spacing 0.02em
	font-feature-settings 'kern'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	// colors
	--white white
	--gainsboro gainsboro
	--lightgray lightgray
	--black black
	--orangered orangered
	--opcolor cornflowerblue
	--modcolor darkseagreen
	--admcolor orangered
	--vipcolor rebeccapurple
	&.theme-dark
		--white black
		--gainsboro #333
		--black white
	background var(--white)
	color var(--black)
a
	color inherit
	text-decoration none
address
	font-style normal
button
	padding 0
	border 0
	font inherit
	cursor pointer
h1, h2, h3, h4, h5, h6
	margin 0
figure,
menu,
ol, ul
	margin 0
	padding 0
ol, ul
	list-style none
p
	margin 0
iframe
	display block
	border 0
img
	display block
.md
	word-break break-word
	.md-spoiler-text
		background black
		color black
		&:focus, &:hover
			background initial
			color initial
	& > * + *
		margin 0.5em 0 0 0
	a
		color dodgerblue
		text-decoration none
		&:hover
			background steelblue
			color white
	blockquote
		margin 0
		padding 0.5em 1em
		background rgba(0,0,0,0.1)
		color gray
		& > * + *
			margin 0.5em 0 0 0
	code
		font-weight bold
		background gainsboro
	h1, h2, h3, h4, h5, h6
		letter-spacing -0.1em
	h1
		font-size 1.5em
	h2
		font-size 1.3333em
	h3, h4, h5, h6
		font-size 1.1666em
	hr
		margin-top 1em
		width 3ch
	ol
		list-style decimal
		padding-left 16px
	pre
		margin 0
		display inline-block
		white-space pre-wrap
		overflow auto
		padding 0.5em 1em
		background gainsboro
	table
		table-layout fixed
		width 100%
		white-space pre
		border-collapse collapse
	td, th
		overflow hidden
		text-align left
		border 1px solid rgba(0,0,0,0.1)
		padding 0 1ch
	ul
		list-style circle
		padding-left 16px
.hide-scrollbar
	scrollbar-width none
	&::-webkit-scrollbar
		display none
.error
	height 100%
	width 100%
	display flex
	justify-content center
	align-items center
	background salmon
	color white