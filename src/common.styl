iframe
video
	width 854px
	height 480px
menu
	margin 0
	padding 0

.md
	* + p
		margin-top 1em
	a
		color steelblue
		text-decoration none
		border-bottom 2px solid lightsteelblue
		&:visited
			color lightsteelblue
	blockquote
		font-style italic
	code
		font-weight bold
		color red
	h1
		font-size 1.4em
	h2, h3, h4, h5, h6
		font-size 1.2em
	ol
		list-style decimal
		padding-left 4rem
	pre
		display inline-block
		white-space pre
		padding 1ch
		border 1px dashed red
		overflow auto
	table
		font 12px/1.5 monospace
		overflow-wrap break-word
		margin 0 0 6px 0
		border 1px solid
	td, th
		padding 0 1ch
	td
		vertical-align top
	th
		vertical-align bottom
		font-weight normal
		background gainsboro
	ul
		list-style square
		padding-left 4rem
		margin 1ch 0
.hide-scrollbar
	scrollbar-width none
.hide-scrollbar::-webkit-scrollbar
	width 0
.text-alpha
	font-weight bold
	text-transform uppercase
*[data-menu]
	position relative
	&::after
		content ''
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		frame-color = darkkhaki
		frame-length = 20px
		background-image:
			linear-gradient(to right, frame-color frame-length, transparent frame-length),
			linear-gradient(to right, frame-color frame-length, transparent frame-length),
			linear-gradient(to bottom, frame-color frame-length, transparent frame-length),
			linear-gradient(to bottom, frame-color frame-length, transparent frame-length)
		background-size:
			100% 1px,
			100% 1px,
			1px 100%,
			1px 100%
		background-position:
			-(frame-length / 2) 0%,
			-(frame-length / 2) 100%,
			0% (-(frame-length / 2)),
			100% (-(frame-length / 2))
		background-repeat:
			repeat-x,
			repeat-x,
			repeat-y,
			repeat-y
		pointer-events none
		opacity 0
	&:hover::after
		opacity 1