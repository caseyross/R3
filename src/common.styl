*
	box-sizing border-box
html
	font-size 25% // 1rem = 4px
body
	margin 0
	// font
	font 400 14px/1.5 'Karla'
	word-spacing 0.25em
	font-feature-settings 'kern'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	// colors
	--white white
	--gainsboro gainsboro
	--lightgray lightgray
	--black black
	--orangered orangered
	--opcolor cornflowerblue
	--modcolor darkseagreen
	--admcolor orangered
	--vipcolor rebeccapurple
	&.theme-dark
		--white black
		--gainsboro #333
		--black white
	background var(--white)
	color var(--black)
	background #40224042
a
	text-decoration none
	color inherit
address
	font-style normal
button
	padding 0
	border 0
	font inherit
	cursor pointer
figure,
menu,
ol, ul
	margin 0
	padding 0
h1, h2, h3, h4, h5, h6
	font-size 1em
	margin 0
h1
	font-size 1.25em
ol, ul
	list-style none
p
	margin 0
img
video
	box-sizing content-box
.md
	word-break break-word
	overflow-wrap anywhere
	a
		color salmon
		&:visited
			color lightsteelblue
	blockquote
		margin 0
		padding-left 1em
		border-left 1px solid
		opacity 0.5
	code
		font-weight bold
		color red
	hr
		margin-top 1em
	ol
		list-style decimal
		padding-left 2em
	pre
		display inline-block
		white-space pre
		padding 1ch
		border 1px dashed red
		overflow auto
	table
		table-layout fixed
		width 100%
		white-space pre
		border-collapse collapse
	td, th
		overflow hidden
		text-align left
		border 1px solid rgba(0,0,0,0.1)
		padding 0 1ch
	ul
		list-style circle
		padding-left 2em
	* + h1,
	* + h2,
	* + h3,
	* + h4,
	* + h5,
	* + h6
		margin-top 3em
		text-transform uppercase
	* + blockquote,
	* + code,
	* + ol,
	* + p,
	* + table,
	* + ul
		margin-top 0.5em
.hide-scrollbar
	scrollbar-width none
	&::-webkit-scrollbar
		display none
.error
	height 100%
	width 100%
	display flex
	justify-content center
	align-items center
	background salmon
	color white