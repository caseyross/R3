*
	box-sizing border-box
html
	font-size 25% // 1rem = 4px
body
	margin 0
	// font
	font 500 12px/1.5 'Fabrikat Normal'
	word-spacing 0.25em
	font-feature-settings 'kern'
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	// colors
	--white white
	--gainsboro gainsboro
	--lightgray lightgray
	--black black
	--orangered orangered
	--opcolor cornflowerblue
	--modcolor darkseagreen
	--admcolor orangered
	--vipcolor rebeccapurple
	&.theme-dark
		--white black
		--gainsboro #333
		--black white
	background var(--white)
	color var(--black)
a
	text-decoration none
	color inherit
address
	font-style normal
button
	padding 0
	border 0
	font inherit
	cursor pointer
figure,
menu,
ol, ul
	margin 0
	padding 0
h1, h2, h3, h4, h5, h6
	font-size inherit
	font-weight normal
	margin 0
ol, ul
	list-style none
p
	margin 0
img
video
	box-sizing content-box
.md
	word-break break-word
	overflow-wrap anywhere
	a
		color salmon
		&:visited
			color lightsteelblue
	blockquote
		margin 0
		opacity 0.5
	code
		font-weight bold
		color red
	h1
		font-size 1.333em
		font-weight 900
	h2, h3, h4, h5, h6
		font-size 1.1666em
		font-weight 700
	hr
		margin-top 1em
	ol
		list-style decimal
		padding-left 4rem
	pre
		display inline-block
		white-space pre
		padding 1ch
		border 1px dashed red
		overflow auto
	table
		overflow-wrap break-word
		border 1px solid
	td, th
		padding 0 1ch
	td
		vertical-align top
	th
		vertical-align bottom
		font-weight normal
		background var(--gainsboro)
	ul
		list-style square
		padding-left 4rem
	* + blockquote,
	* + code,
	* + h1,
	* + h2,
	* + h3,
	* + h4,
	* + h5,
	* + h6,
	* + ol,
	* + p,
	* + table,
	* + ul
		margin-top 1ch
.hide-scrollbar
	scrollbar-width none
	&::-webkit-scrollbar
		display none
.error
	height 100%
	width 100%
	display flex
	justify-content center
	align-items center
	background salmon
	color white