script.
	active = false
	position =
		x: 0
		y: 0
	###
	document.addEventListener(
		'mousedown',
		(e) ->
			if e.buttons is 2
				position =
					x: e.x
					y: e.y
				active = true
	)
	document.addEventListener(
		'mouseup',
		(e) ->
			active = false
	)
	###
	KeyMap.ShiftLeft =
		n: 'Show X-Menu'
		d: () => active = true
		u: () => active = false

menu.absolute(style='transform: translate({position.x}px, {position.y}px); opacity: {active ? 1 : 0}')
	label
	label Award
	label
	label Report
	.w-full.h-full.border-2.border-solid.border-black.rounded-full
	label Reply
	label
	label Save
	label

style.
	menu
		width 144px
		height 144px
		top -(@height / 2)
		left -(@width / 2)
		display grid
		grid-template-rows 1fr 48px 1fr
		grid-template-columns 1fr 48px 1fr
		place-items center
	label
		background white
		color black
		border 2px solid black
		border-radius 9999px
		padding 4px