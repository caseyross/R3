script.
	import Tag from './Tag.pug'
	export flair = {}
	export subredditName = ''
	emojis = {}
	flairHTML = flair.text
	if LS['emojis@' + subredditName]
		for emoji in LS['emojis@' + subredditName].split(',')
			[code, id] = emoji.split(':')
			emojis[code] = id
		flairHTML =
			flair.text
			.split(':')
			.map (s) ->
				if emojis[s]
					"<img src='https://emoji.redditmedia.com/#{emojis[s]}/#{s}' class='flair-emoji' title=':#{s}:' alt=#{s}>"
				else
					s
			.join('')

Tag(html={flairHTML} color={flair.color})

style.
	:global(.flair-emoji)
		height 20px