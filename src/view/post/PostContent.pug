script.
	export content = null
	import { AWAIT } from '/src/effect'
	import PostComments from './PostComments'
	import PostImage from './PostImage'
	import PostVideo from './PostVideo'

.content.hide-scrollbar
	{#if content.type === 'iframe'}
		iframe(src={content.data.src} allowfullscreen='true' allow={content.data.allow})
	{:else if content.type === 'video'}
		PostVideo(data={content.data})
	{:else if content.type === 'image'}
		{#each content.data as image}
			PostImage(image={image})
	{:else if content.type === 'text'}
		article.post-text
			{#if content.data.length}
				{@html Markdown.to_HTML(content.data)}
			{:else}
				p [No submission text.]
	{:else if content.type === 'comment'}
		AWAIT(let:v p={content.DATA})
			PostComments(COMMENTS={v.REPLIES})
	{:else if content.type === 'link'}
		a(href={content.data}) {content.data}
	{:else}
		.error-tag [UNKNOWN CONTENT]

style.
	.content
		display grid
		grid-auto-flow column
		width 100%
		overflow auto
		justify-content flex-start