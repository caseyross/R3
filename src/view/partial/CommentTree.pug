script.
	export data = null
	import Comment from '/src/model/Comment'
	import MoreComments from '/src/model/MoreComments'
	import DistinguishTag from './DistinguishTag'

.comment-tree
	{#if data instanceof MoreComments}
		button {data.ids.length} more
	{:else if data instanceof Comment}
		.comment
			.comment-meta
				{#if data.distinguish}
					DistinguishTag(distinguish={data.distinguish})
				a(href='/u/{data.author.name}') {data.author.name}
			{@html Markdown.to_HTML(data.content)}
		{#if data.replies.length}
			.replies
				{#each data.replies as reply}
					svelte:self(data={reply})

style.
	.comment-tree
		margin-top 1em
	.comment
		width 55ch
		padding 3rem 4rem
		border 1px solid lightgray
		border-radius 10px
	.comment-meta
		position relative
		background white
		color lightgray
		font-size 10px
	.replies
		padding-left 10rem