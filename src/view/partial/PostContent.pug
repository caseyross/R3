script.
	export content = null
	import { AWAIT } from '../effect'
	import PostComments from './PostComments'
	import PostGallery from './PostGallery'
	import PostText from './PostText'
	import PostVideo from './PostVideo'

{#if content.type === 'iframe'}
	iframe(src={content.data.src} allowfullscreen='true' allow={content.data.allow})
{:else if content.type === 'video'}
	PostVideo(data={content.data})
{:else if content.type === 'image'}
	PostGallery(images={content.data})
{:else if content.type === 'text'}
	PostText(html={content.data})
{:else if content.type === 'comment'}
	AWAIT(let:v p={content.data.COMMENTS})
		PostComments(comments={v})
{:else if content.type === 'link'}
	a(href={content.data}) {content.data}
{:else}
	.error [UNKNOWN CONTENT]

style.
	iframe
		width 854px
		height 480px
		border 0
	a
		max-width 854px
		padding 10rem
		border 1px solid
		font-size 89px
		word-break break-all