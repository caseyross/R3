script.
	export data = null
	import CommentSnapshot from '/src/model/thing/CommentSnapshot'
	import MoreCommentsReference from '/src/model/thing/MoreCommentsReference'
	import DistinguishTag from '../shared/DistinguishTag'

.comment-tree
	{#if data instanceof MoreCommentsReference}
		button {data.ids.length} more
	{:else if data instanceof CommentSnapshot}
		.comment
			.comment-meta
				{#if data.distinguish}
					DistinguishTag(distinguish={data.distinguish})
				a(href='/u/{data.author.name}') {data.author.name}
			{@html Markdown.to_HTML(data.content)}
		{#if data.replies.length}
			.replies
				{#each data.replies as reply}
					svelte:self(data={reply})

style.
	.comment-tree
		margin-top 1em
	.comment
		width 55ch
		padding 3rem 4rem
		border 1px solid lightgray
		border-radius 10px
	.comment-meta
		position relative
		background white
		color lightgray
		font-size 10px
	.replies
		padding-left 10rem