script.
	import PostFlair from '../post/PostFlair.pug'
	import Post from '../post/Post.coffee'
	export post = {}

{#if post instanceof Post}
	a(href={post.href})
		.meta
			PostFlair(flair={post.titleFlair})
		.title {post.title}

style.
	a
		display block
		padding 1ch 2ch
		border-radius 1ch
		background gainsboro
		border 1px solid white
	.meta
		margin-bottom 2px
	.title
		font-size 15px