script.
	import PostItem from './PostItem.pug'
	import Feed from './Feed.coffee'
	export feed = {}

{#if feed instanceof Feed}
	nav
		{#each feed.sections as section}
			{#await section.get()}
			{:then items}
				section
					h1 {section.description}
					ol
						{#each items as item}
							li
								PostItem(post={item})

style.
	nav
		position fixed
		top 10vh
		left 0
		width 30vw
		height 90vh
		padding-left 5vw
		padding-right 5vw
	li
		padding 1em