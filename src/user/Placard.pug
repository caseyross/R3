script.
	export name = ''
	export flair = {}
	export subredditName = ''
	emojis = {}
	flairHTML = flair.text
	if LS['emojis@' + subredditName]
		for emoji in LS['emojis@' + subredditName].split(',')
			[code, id] = emoji.split(':')
			emojis[code] = id
		flairHTML =
			flair.text
			.split(':')
			.map (s) ->
				if emojis[s]
					"<img src='https://emoji.redditmedia.com/#{emojis[s]}/#{s}' class='flair-emoji' title=':#{s}:' alt=#{s}>"
				else
					s
			.join('')

.placard
	a.name(href='/u/{name}') {name}
	{#if flairHTML}
		span.flair {@html flairHTML}

style.
	.placard
		color rgba(0,0,0,0.5)
		border-radius 4px
		border 1px solid
	.name
	.flair
		display inline-block
		padding 1px 4px
	.flair
		border-left 1px solid
	:global(.flair-emoji)
		height 20px
		width 20px