script.
	export name = ''
	export flair = {}
	export subredditName = ''
	emojis = {}
	flairHTML = flair.text
	if LS['emojis@' + subredditName]
		for emoji in LS['emojis@' + subredditName].split(',')
			[code, id] = emoji.split(':')
			emojis[code] = id
		flairHTML =
			flair.text
			.split(':')
			.map (s) ->
				if emojis[s]
					"<img src='https://emoji.redditmedia.com/#{emojis[s]}/#{s}' class='flair-emoji'>"
				else
					s
			.join('')

span.placard
	a.name(href='/u/{name}') {name}
	{#if flairHTML}
		span.flair {@html flairHTML}

style.
	.placard
		background gray
		color white
		border-radius 4px
	.name
	.flair
		padding 2px 4px
	.flair
		background lightgray
		color black
		border-radius 0 4px 4px 0
	:global(.flair-emoji)
		height 20px
		width 20px