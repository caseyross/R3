script.
	export image = null
	export minH = 0
	export minW = 0
	export maxH = Infinity
	export maxW = Infinity
	export maxP = Infinity
	export alt = ''

	res = image.pick { minH, minW, maxH, maxW, maxP }
	
	style = ''
	if maxW < Infinity
		style += 'max-width:' + maxW + 'px;'
	if maxH < Infinity
		style += 'max-height:' + maxH + 'px;'

img(src={res.u} style={style} alt={alt})

style.
	img
		background rgba(255,255,255,0.1)