// Type
@font-face
	font-family 'Albert Sans'
	font-weight 400
	src url('./font_albertsans_400.woff2')
@font-face
	font-family 'Albert Sans'
	font-weight 700
	src url('./font_albertsans_700.woff2')
@font-face
	font-family 'Albert Sans'
	font-style italic
	font-weight 400
	src url('./font_albertsans_400_i.woff2')
@font-face
	font-family 'Albert Sans'
	font-style italic
	font-weight 700
	src url('./font_albertsans_700_i.woff2')

// Single-direction margin
*
	margin-bottom 0
*:first-child
	margin-top 0 !important

// Theming
.theme-light
	--bgcolor white
	--color black
	--commentcolor aliceblue
	--linkcolor mediumslateblue
	--separatorcolor gainsboro
	--tintcolor rgba(0,0,0,0.05)
	color-scheme light
.theme-dark
	--bgcolor #1d263b
	--color white
	--commentcolor #1e2846
	--linkcolor wheat
	--separatorcolor slategrey
	--tintcolor rgba(0,0,0,0.25)
	color-scheme dark

// General
*:focus
	outline-color gold

// Body
body
	background-color var(--bgcolor)
	color var(--color)
	font 12pt 'UD Digi Kyokasho NK-R'
	margin 0

// Paragraphs
p
	margin 0.5em 0 0 0
	width 480px
hr
	background currentColor
	border 0
	height 1px
	margin 1em 0 0 0
	width 480px

// Formatted text
a
	color var(--linkcolor)
	text-decoration none
	overflow-wrap anywhere
a:not(:is(a[href*='reddit.com/'], a[href*='redd.it/'], a[href^='/'], a[href^='#']))::before
	content '↗️' / 'External link'
	font bold 0.8em 'Meiryo'
	margin-inline-end 1ch
	opacity 0.8
address
	font-style normal

// Verbatim text
blockquote
	border-left 5px solid var(--separatorcolor)
	margin 0.5em 0 0 2px
	opacity 0.8
	padding 0 0 0 10px
code
pre
	background var(--tintcolor)
	font-family 'roboto mono'
	overflow-wrap anywhere
	white-space pre-wrap
pre
	display inline-block
	font-size 12px
	padding 1em
	& code
		background transparent

// Spoilers
.md-spoiler-text
	background var(--color)
	cursor text
	padding 0.05em 0
	opacity 0.5
	& a
		opacity 0
	&:hover
		background rgba(0,0,0,0.1)
		opacity 1
		& a
			opacity 1

// Lists
menu
ol
ul
	margin 0
	padding 0
ol ol
ol ul
ul ol
ul ul
	list-style-type initial
.md ol
.md ul
	margin 0.25em 0 0 0
	padding-inline-start 18px
.md ol ol
.md ol ul
.md ul ol
.md ul ul
	margin 0.25em 0 0 0
li
	margin 0.25em 0 0 0
	max-width 582px

// Headers
h1
h2
h3
h4
h5
h6
	margin 1em 0 0 0
h1
	font-size 1.5em
h2
	font-size 1.35em
h3
	font-size 1.2em
h4
h5
h6
	font-size 1em

// Tables
table
	background rgba(0,0,0,0.1)
	font-size 12px
	line-height 1.25
	margin 0.5em 0 0 0
	padding 1em
td
th
	padding 0.1em
td ~ td
th ~ th
	padding-left 0.9em

// Media
figure
	margin 0
iframe
	background black
	border 0
	border-radius 2px
img
	border-radius 2px
	display block
video
	background black
	border-radius 2px
	display block

// Interactive
button
input
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit