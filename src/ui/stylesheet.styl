// Imports
@font-face
	font-display swap
	font-family 'Arimo'
	font-style normal
	font-weight 400 700
	src url('./font/arimo.woff2')
@font-face
	font-display swap
	font-family 'Arimo'
	font-style italic
	font-weight 400 700
	src url('./font/arimo_i.woff2')
@font-face
	font-family 'Roboto Flex'
	font-stretch 25% 151%
	font-style normal oblique
	font-weight 100 1000
	src url('./font/roboto_flex.woff2')
@font-face
	font-family 'Roboto Mono'
	font-style normal
	font-weight 100 700
	src url('./font/roboto_mono.woff2')
@font-face
	font-family 'Roboto Mono'
	font-style italic
	font-weight 100 700
	src url('./font/roboto_mono_i.woff2')

// Baseline resets
*
	box-sizing border-box
	margin 0
	&:first-child
		margin-top 0 !important
	&::-webkit-scrollbar
		background var(--c-blend-faint)
		border-radius 1em
	&::-webkit-scrollbar-thumb
		background var(--c-blend-weak)
		border-radius 1em

// Page structure & theme
html
	font-size 15px // declared here for em/rem sizing
body
	background-color var(--c-theme)
	color var(--c-theme-text)
	display grid
	font-family var(--f-family-prop)
	font-weight var(--f-wght-normal)
	grid-auto-flow row
	grid-template-columns 1fr
	line-height 20px
	overflow-y scroll
	place-items center
	scrollbar-width 0
	word-spacing 0.5px
	&::-webkit-scrollbar
		display none
	--c-brand-gradient linear-gradient(120deg, #CEE3F8, orangered)
	--c-vote-down steelblue
	--c-vote-up var(--c-brand-gradient)
	--f-family-mono 'Roboto Mono', monospace
	--f-family-prop 'Helvetica', 'Arial', sans-serif
.color-strategy-dark-bg
	color-scheme dark
	--c-blend-faint rgba(255,255,255,0.0625)
	--c-blend-weak rgba(255,255,255,0.125)
	--c-con-weak rgba(0,0,0,0.125)
	--c-con-normal rgba(0,0,0,0.25)
	--c-shade-weak rgba(0,0,0,0.125)
	--c-shade-strong rgba(0,0,0,0.50)
	--c-text-xfaint rgba(255,255,255,0.125)
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-tint-normal rgba(255,255,255,0.125)
	--f-wght-normal 400
	--f-wght-strong 600
.color-strategy-light-bg
	color-scheme light
	--c-blend-faint rgba(0,0,0,0.0625)
	--c-blend-weak rgba(0,0,0,0.125)
	--c-con-weak rgba(255,255,255,0.5)
	--c-con-normal white
	--c-shade-weak rgba(0,0,0,0.0625)
	--c-shade-strong rgba(0,0,0,0.25)
	--c-text-xfaint rgba(0,0,0,0.125)
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-tint-normal rgba(255,255,255,0.5)
	--f-wght-normal 450
	--f-wght-strong 650
.color-strategy-ultralight-bg
	color-scheme light
	--c-blend-faint rgba(0,0,0,0.0625)
	--c-blend-weak rgba(0,0,0,0.125)
	--c-con-weak rgba(0,0,0,0.03125)
	--c-con-normal rgba(0,0,0,0.0625)
	--c-shade-weak rgba(0,0,0,0.03125)
	--c-shade-strong rgba(0,0,0,0.125)
	--c-text-xfaint rgba(0,0,0,0.125)
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-tint-normal rgba(0,0,0,0.0625)
	--f-wght-normal 450
	--f-wght-strong 650

// General layout & typography
a
	color inherit
	overflow-wrap anywhere
	text-decoration none
	.md &
		text-decoration underline
		&:empty
			display none
		&:has(img)
			text-decoration none
address
	font-style normal
blockquote
	border-left 2px solid var(--c-text-xfaint)
	color var(--c-text-weak)
	margin 0.666em 0 0
	padding-left 1em
cite
	font-style normal
code
	color palegreen
	background black
	font-family var(--f-family-mono)
	font-size 12px
	word-break break-all
fieldset
	border 0
	padding 0
kbd
	font-family var(--f-family-mono)
hr
	border 0
	border-bottom 1px solid var(--c-text-xfaint)
	margin 1.333em 0
	width 100%
menu
	padding 0
p
	margin 0.666em 0 0
pre
	font-family var(--f-family-mono)
	font-size 12px
	margin 0.666em 0 0
	overflow auto
	white-space pre-line
sub
sup
	line-height 0
.md
	overflow-wrap anywhere
	h1
	h2
	h3
	h4
	h5
	h6
		font-weight var(--f-wght-strong)
		line-height 1.333
		margin 1rem 0 0
	h1
		font-size 1.5em
		letter-spacing -0.666px
		line-height 1.25
	h2
		font-size 1.25em
		letter-spacing -0.5px
	h3
	h4
		font-size 1.1666em
		letter-spacing -0.333px
	h5
	h6
	b
	strong
		font-size inherit
		font-weight var(--f-wght-strong)
.md-spoiler-text
	background black
	border-radius 5px
	color transparent
	cursor default
	*
		opacity 0
	&:hover
		background var(--c-con-weak)
		color inherit
		*
			opacity 1

// Lists
ol
ul
	list-style none
	padding 0
.md
	ol
	ul
		counter-reset list
		margin 0.333em 0 0
	li
		counter-increment list
		margin 0.333em 0 0
		padding-left 1ch
		position relative
		&::before
			position absolute
			right 100%
			top 0
			white-space pre
	ol > li
		margin-left 1.5em
		&::before
			align-items center
			background var(--c-blend-weak)
			border-radius 999px
			content counter(list)
			display inline-flex
			font-feature-settings 'tnum'
			font-size 0.75rem
			font-weight var(--f-wght-strong)
			justify-content center
			width 1.333rem
	ul > li
		margin-left 1ch
		&::before
			content 'â€“'

// Tables
.md
	table
		border-collapse collapse
		font inherit
		font-feature-settings 'tnum'
		font-size 13px
		letter-spacing 0.333px
		line-height 1.5
		margin 1rem 0 0
		table-layout fixed
		white-space pre
		width 100%
	tbody tr:nth-child(odd)
		background var(--c-blend-faint)
	td
	th
		padding 0.5em
		overflow hidden
		text-align left
		text-overflow ellipsis
	td
		border-left 1px solid var(--c-text-faint)
		vertical-align top
	th
		border-left 1px solid transparent
		border-bottom-color var(--c-text-faint)
		font-weight var(--f-wght-strong)
		font-size 10px
		letter-spacing 1px
		text-transform uppercase
		vertical-align bottom

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%
.md img
	margin 0.666em 0 0