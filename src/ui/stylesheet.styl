// Baseline resets
*
	box-sizing border-box
	margin 0
*:first-child
	margin-top 0 !important
*:focus
	outline-color gold

// Type and theme
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../vendor/inter_100_900.woff2')
:root
	font 400 14px/1.5 'Inter', sans-serif
	letter-spacing 0.025em
	--color-paper-border gainsboro
	--color-writing-action mediumslateblue
	--typeface-mono 'Roboto Mono', 'Cascadia Mono', 'Consolas', monospace
strong
	font-weight 600
	letter-spacing 0.015em
.color-strategy-black-text
	color-scheme light
	--c-back-default white
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-norm rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong black
.color-strategy-white-text
	color-scheme dark
	font-weight 340
	--c-back-default #343537
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-norm rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong #f2f4f7
*::-webkit-scrollbar
	background var(--c-con-weak)
*::-webkit-scrollbar-thumb
	background var(--c-con-norm)
	border-radius 6px

// Layout sections
p
	margin 1.2em 0 0 0
hr
	border 1px solid var(--c-text-weak)
	margin 1.2em 0 0 0

// Lists
menu
ol
ul
	list-style none
	margin 0
	padding 0
.md ol
.md ul
	list-style revert
	margin 1.2em 0 0 0
	padding-inline-start 3ch
	& ul
		list-style-type initial
.md ol ol
.md ol ul
.md ul ol
.md ul ul
	margin 0.2em 0 0 0
.md li
	margin 0.2em 0 0 0

// Headers
h1
h2
h3
h4
h5
h6
	margin 0
.md
	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.25
		margin 1em 0 0 0
	h1
		font-size 1.5em
	h2
		font-size 1.35em
	h3
		font-size 1.2em
	h4
	h5
	h6
		font-size 1em

// Tables
table
	background var(--c-con-norm)
	border-radius 6px
	font-size 11px
	margin 0.5em 0 0 0
	overflow-wrap normal
	padding 1em
td
th
	padding 1px 0
	padding-right 3ch

// Formatted text
a
	color inherit
	text-decoration none
	&:empty
		background var(--c-text-strong)
		border-radius 10px
		display inline-block
		height 1em
		width 4em
address
	font-style normal
sub
sup
	line-height 0
.md
	overflow-wrap anywhere
	a
		color lightskyblue
		word-break break-all
	a:not(:is([href^='/'], [href^='#']))::before
		background lightskyblue
		border-radius 999px
		color white
		content 'â†’'
		display inline
		font-size 0.9em
		height 1.25em
		line-height 1.25
		margin-left 0.2em
		margin-right 0.4em
		padding 0 0.125em
	a[target='_blank']::before
		display none !important

// Verbatim text
blockquote
	border-left 3px solid var(--c-text-weak)
	color var(--c-text-weak)
	font-size 12px
	margin 1.4em 0 0 2px
	padding-left 1em
code
pre
	font-family var(--typeface-mono)
	font-size 12px
	letter-spacing 0
code
	background var(--c-con-norm)
	border-radius 2px
	padding 1px 2px
	word-break break-all
pre
	background var(--c-con-norm)
	border-radius 6px
	margin 1.2em 0 0 0
	padding 1em

// Spoilers
.md-spoiler-text
	background black
	border-radius 3px
	color transparent
	cursor default
	transition all 0.125s
	*
		opacity 0
	&:hover
		background transparent
		color inherit
		*
			opacity 1

// Interactive
button
input
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select all
	word-spacing inherit
details
	cursor pointer

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%