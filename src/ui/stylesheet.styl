// Type
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../asset/inter_100_900.woff2')
html
	color-scheme dark
	--color-control rgba(0,0,0,0.05)
	--color-control-focused rgba(0,0,0,0.10)
	--color-control-toggled rgba(0,0,0,0.50)
	--color-paper-action aliceblue
	--color-paper-border gainsboro
	--color-paper-callout rgba(0,0,0,0.05)
	--color-writing-action mediumslateblue
	--typeface-mono 'Roboto Mono', 'Cascadia Mono', 'Consolas', monospace

// Single-direction margin
*
	margin-bottom 0
*:first-child
	margin-top 0 !important

// General
*
	box-sizing border-box
*:focus
	outline-color gold
.md
	cursor default
	overflow-wrap anywhere

// Body
body
	align-items center
	background-color #343537
	color #f2f4f7
	display flex
	flex-flow column nowrap
	font 500 10pt/1.6 'Inter', sans-serif
	height 100vh
	letter-spacing 0.01em
	margin 0

// Paragraphs
p
	margin 0.7em 0 0 0
hr
	border 1px solid rgba(0,0,0,0.1)
	margin 1em 0 0 0

// Formatted text
a
	color inherit
	text-decoration none
.md
	a
		color lightskyblue
		word-break break-all
	a:is([href^='/'], [href^='#'])::before
		background lightsalmon
		border-radius 999px
		color white
		content 'r/'
		display inline
		font-size 0.8em
		height 1.25em
		line-height 1.25
		margin-left 0.2em
		margin-right 0.4em
		padding 0 0.5em
	a:not(:is([href^='/'], [href^='#']))::before
		background lightskyblue
		border-radius 999px
		color white
		content 'â†’'
		display inline
		font-size 0.8em
		height 1.25em
		line-height 1.25
		margin-left 0.2em
		margin-right 0.4em
		padding 0 0.125em
	a[target='_blank']::before
		display none !important
address
	font-style normal
strong
	letter-spacing 0
sub
sup
	line-height 0

// Verbatim text
blockquote
	border-left 3px solid #666
	color #ccc
	font-size 0.9em
	margin 0.5em 0 0 2px
	padding-left 1em
code
pre
	background var(--color-paper-callout)
	font-family var(--typeface-mono)
	font-size 12px
code
	padding 0 0.25em
	overflow-wrap anywhere
	white-space pre-wrap
pre
	background #333
	overflow auto
	padding 2em
	& code
		background transparent
		padding 0
		white-space pre
	.comment-text &
		max-width 300px
	.post-selftext &
		max-width 480px

// Spoilers
.md-spoiler-text
	background var(--color-writing)
	padding 0.25em
	&:hover
		background var(--color-paper-callout)
	*
		opacity 0
		&:hover &
			opacity 1

// Lists
menu
ol
ul
	list-style none
	margin 0
	padding 0
.md ol
.md ul
	list-style initial
	margin 0.5em 0 0 0
	padding-inline-start 25px
	& ul
		list-style-type initial
.md ol ol
.md ol ul
.md ul ol
.md ul ul
	margin 0.5em 0 0 0 !important
.md li
	margin-top 0.5em

// Headers
h1
h2
h3
h4
h5
h6
	line-height 1.25
	margin 1em 0 0 0
h1
	font-size 1.5em
h2
	font-size 1.35em
h3
	font-size 1.2em
h4
h5
h6
	font-size 1em

// Tables
table
	font-size 12px
	margin 0.5em 0 0 0
	overflow-wrap normal
tr:nth-child(odd)
	background rgba(0,0,0,0.05)
	thead &
		background rgba(0,0,0,0.5)
		color white
td
th
	padding 0 3px
	vertical-align top

// Media
figure
	margin 0
iframe
	border 0
img
	box-sizing content-box
	display block
video
	box-sizing content-box
	display block

// Interactive
button
input
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit