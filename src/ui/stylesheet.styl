// Type
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../vendor/inter_100_900.woff2')
html
	--color-paper-border gainsboro
	--color-writing-action mediumslateblue
	--typeface-mono 'Roboto Mono', 'Cascadia Mono', 'Consolas', monospace
.color-strategy-light-background
	color-scheme #f2f4f7
	--c-back-default white
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-norm rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong black
.color-strategy-dark-background
	color-scheme dark
	--c-back-default #343537
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-norm rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong #f2f4f7


// Single-direction margin
*
	margin-bottom 0
*:first-child
	margin-top 0 !important

// General
*
	box-sizing border-box
*:focus
	outline-color gold
.md
	letter-spacing 0.025em
	overflow-wrap anywhere

// Body
body
	align-items center
	display flex
	flex-flow column nowrap
	font 500 10pt/1.5 'Inter', sans-serif
	height 100vh
	margin 0

// Paragraphs
p
	margin 0.7em 0 0 0
hr
	border 1px solid rgba(0,0,0,0.1)
	margin 1em 0 0 0

// Formatted text
a
	color inherit
	text-decoration none
.md
	a
		color lightskyblue
		word-break break-all
	a:not(:is([href^='/'], [href^='#']))::before
		background lightskyblue
		border-radius 999px
		color white
		content 'â†’'
		display inline
		font-size 0.8em
		height 1.25em
		line-height 1.25
		margin-left 0.2em
		margin-right 0.4em
		padding 0 0.125em
	a[target='_blank']::before
		display none !important
address
	font-style normal
strong
	letter-spacing 0
sub
sup
	line-height 0

// Verbatim text
blockquote
	border-left 3px solid var(--c-text-weak)
	color var(--c-text-weak)
	font-size 0.9em
	margin 0.5em 0 0 2px
	padding-left 1em
code
pre
	border 1px dashed
	font-family var(--typeface-mono)
	font-size 12px
code
	padding 0 0.25em
	overflow-wrap anywhere
	white-space pre-wrap
pre
	border-radius 10px
	overflow hidden
	padding 1em
	& code
		border none
		padding 0
		white-space pre

// Spoilers
.md-spoiler-text
	background black
	color transparent
	*
		opacity 0
	&:hover
		background transparent
		color inherit
		*
			opacity 1

// Lists
menu
ol
ul
	list-style none
	margin 0
	padding 0
.md ol
.md ul
	list-style initial
	margin 0.5em 0 0 0
	padding-inline-start 25px
	& ul
		list-style-type initial
.md ol ol
.md ol ul
.md ul ol
.md ul ul
	margin 0.5em 0 0 0 !important
.md li
	margin-top 0.5em

// Headers
h1
h2
h3
h4
h5
h6
	line-height 1.25
	margin 1em 0 0 0
h1
	font-size 1.5em
h2
	font-size 1.35em
h3
	font-size 1.2em
h4
h5
h6
	font-size 1em

// Tables
table
	font-size 12px
	margin 0.5em 0 0 0
	overflow-wrap normal
tr:nth-child(odd)
	background var(--c-con-weak)
	thead &
		background var(--c-con-strong)
td
th
	padding 0 3px
	vertical-align top

// Media
figure
	margin 0
iframe
	border 0
img
	box-sizing content-box
	display block
video
	box-sizing content-box
	display block

// Interactive
button
input
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit
details
	cursor pointer