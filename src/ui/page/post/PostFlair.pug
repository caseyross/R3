script.
	import { Color } from '../../../lib/index.js'
	export color = null
	export emoji_style = null
	export rich_text = null
	export text = null

span.post-flair(style="background-color: {color || 'white'}; color: {(new Color({ hex: color }))?.isDark() ? 'white' : 'black'}")
	{#if rich_text && rich_text.length}
		{#each rich_text as segment}
			{#if segment.e === 'text'}
				| {segment.t}
			{:else if segment.e === 'emoji' && emoji_style !== null}
				{#if emoji_style === 'image'}
					img.post-flair-emoji(alt={segment.a} src={segment.u} title={segment.a})
				{:else if emoji_style === 'text'}
					| {segment.a}
	{:else}
		| {text}

style.
	.post-flair
		align-items center
		border-top-left-radius 6px
		border-top-right-radius 6px
		display inline-flex
		font-size 9pt
		gap 0.5ch
		padding 2px 6px
		user-select none
		white-space pre
	.post-flair-emoji
		height 16px