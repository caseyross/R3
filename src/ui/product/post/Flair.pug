script.
	import { Color } from '../../../utils/index.js'
	export color = null
	export emoji_style = null
	export rich_text = null
	export text = null

span.flair
	.flair-color(style="background: {color || 'orangered'}; color: {color ? (new Color(color)).asContrastHex() : 'white'}")
	{#if rich_text && rich_text.length}
		{#each rich_text as segment}
			{#if segment.e === 'text'}
				| {segment.t}
			{:else if segment.e === 'emoji' && emoji_style !== null}
				{#if emoji_style === 'image'}
					img.flair-emoji(alt={segment.a} src={segment.u} title={segment.a})
				{:else if emoji_style === 'text'}
					| {segment.a}
	{:else}
		| {text}

style.
	.flair
		align-items center
		border-radius 99px
		display inline-flex
		gap 1ch
	.flair-color
		aspect-ratio 1
		border-radius 50%
		height 5px
	.flair-emoji
		height 16px