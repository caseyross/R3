script.
	import hotkey from './useActions/hotkey.coffee'
	import KeyLabel from './KeyLabel.pug'
	export action = null
	export activated = false
	export disabled = false
	export key = null
	export link = null
	export text = ''

{#if link}
	a(class:activated={activated} disabled={disabled} href={link} use:hotkey={key})
		slot
		{#if text}
			span.button-text {text}
		{#if key}
			KeyLabel(key={key})
{:else}
	button(class:activated={activated} disabled={disabled} on:keydown={e => e.key === 'Enter' && action()} on:mousedown={action} use:hotkey={key})
		slot
		{#if text}	
			span.button-text {text}
		{#if key}
			KeyLabel(key={key})

style.
	a
	button
		background rgba(0,0,0,0.05)
		display inline-flex
		flex-flow row-reverse nowrap
		border-radius 6px
		gap 5px
		line-height 18px
		padding 4px 6px
		&:disabled
			opacity 0.5
		&:hover
			background rgba(0,0,0,0.10)
		&.activated
			background rgba(0,0,0,0.50)
			color white