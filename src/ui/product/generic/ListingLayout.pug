script.
	import AccountSwitcher from '../auth/AccountSwitcher.pug'

.listing-layout
	.listing-layout-account
		AccountSwitcher
	.listing-layout-navigation
		slot(name='navigation')
	.listing-layout-selection
		slot(name='selection')

style.
	.listing-layout
		display grid
		grid-template-columns 256px 529px
		grid-template-rows 100vh
	.listing-layout-account
		right 1em
		position fixed
		top 1em
	.listing-layout-navigation
		height 100%
		overflow auto
		scrollbar-gutter stable
	.listing-layout-selection
		border-left 1px solid var(--separatorcolor)
		height 100%
		overflow auto
		padding-left 48px
		scrollbar-gutter stable