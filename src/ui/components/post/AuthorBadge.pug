script.
	export name = 'caseyross'
	export distinguish = null
	export isOP = false
	export flairText = null

address
	span.name
		{#if distinguish === 'moderator'}
			| Moderator
		{:else if distinguish === 'admin'}
			| Admin
		{:else if distinguish === 'special'}
			| Ex-Admin
		{:else}
			| User
		{#if isOP}
			| (OP)
	{#if flairText?.length > 0}
		span.flair {flairText}

style.
	.name
	.flair
		padding 2px 8px
		border-radius 5px
		display inline-block
		font-style normal
		font-weight bold
		font-size 12px
		margin 2px 0
	.name
		margin-left 10px
		background gray
		color white
		opacity 0.3
	.flair
		opacity 0.5