script.
	import Headline from './Headline.pug'
	import Post from '../post/Post.pug'
	import datasets from '../../../api/datasets/store.coffee'
	export id = ''
	itemIds = null
	selectedId = null
	datasets.load(id)
	datasets.subscribeToKey(id, (value) -> { data: itemIds } = value)

.listing
	{#if itemIds && itemIds.length}
		{#each itemIds as itemId}
			{#if itemId.idType === 't3'}
				Headline(id={itemId} onSelect={() => selectedId = itemId})
			{#if itemId === selectedId}
				Post(id={itemId})
style.
	.listing
		align-items center
		display flex
		flex-flow column nowrap
		padding 30px