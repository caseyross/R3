script.
	import api from '../../../api/index.js'
	import Time from '../../../lib/Time.coffee'
	import StringFormat from '../../tools/StringFormat.coffee'
	import Score from './Score.pug'
	export id = null
	export selected = false
	export onSelect = null
	post = null
	api.watch(id, (x) -> { data: post } = x)

{#if post}
	.headline(class:selected={selected} on:mousedown={onSelect})
		address
			Score(value={post.hide_score || post.score})
			time(datetime={Time.sToMs(post.created_utc)}) {StringFormat.date(Time.sToMs(post.created_utc))}
			span {StringFormat.distinguish(post.distinguish)}
		.title {post.title}

style.
	.headline
		box-sizing border-box
		padding 2ch
		&.selected
			background rgba(0,0,0,0.1)
	address
		color rgba(0,0,0,0.5)
		font 12px 'roboto mono'