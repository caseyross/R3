script.
	import Button from './Button.pug'
	export baselink = null
	export options = []
	export selected = null
	export title = null

fieldset
	{#if title}
		legend {title}
	{#each options as option}
		Button(action={option.action} activated={selected === option.value} disabled={option.disabled} link={option.link || (baselink + option.value)}) {option.label}

style.
	fieldset
		border 0
		display flex
		flex-flow row wrap
		gap 2px
		padding 0
	legend
		color var(--c-text-weak)
		font-feature-settings 'cpsp'
		font-size 10px
		padding 3px 0
		text-transform uppercase