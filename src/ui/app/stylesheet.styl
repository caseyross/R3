// Baseline resets
*
	box-sizing border-box
	margin 0
	&:focus
		outline-color gold
	&:last-child
		margin-bottom 0 !important

// Type
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../../vendor/inter_100_900.woff2')
html
	font-size 14px
body
	--f-type-prop 'Inter', sans-serif
	--f-type-mono 'Roboto Mono', 'Cascadia Mono', 'Consolas', monospace
	font-family var(--f-type-prop)
	font-feature-settings 'cv11'
	font-size 1rem
	font-weight var(--f-wght-normal)
	letter-spacing 0.444px
	line-height 1.5
b
strong
	font-weight var(--f-wght-strong)
	letter-spacing 0.266px

// Theme
body
	--c-theme-default #ffffff
	background var(--c-theme)
	color var(--c-text-strong)
	&.color-strategy-black-text
		--c-blend-normal rgba(0,0,0,0.10)
		--c-con-weak rgba(255,255,255,0.05)
		--c-con-normal rgba(255,255,255,0.10)
		--c-con-strong rgba(255,255,255,0.50)
		--c-hint-normal cornflowerblue
		--c-text-faint rgba(0,0,0,0.25)
		--c-text-weak rgba(0,0,0,0.50)
		--c-text-strong black
		--c-text-reverse white
		--f-wght-normal 400
		--f-wght-strong 640
		color-scheme light
	&.color-strategy-white-text
		--c-blend-normal rgba(255,255,255,0.10)
		--c-con-weak rgba(0,0,0,0.05)
		--c-con-normal rgba(0,0,0,0.10)
		--c-con-strong rgba(0,0,0,0.50)
		--c-hint-normal wheat
		--c-text-faint rgba(255,255,255,0.25)
		--c-text-weak rgba(255,255,255,0.50)
		--c-text-strong #f2f4f7
		--c-text-reverse black
		--f-wght-normal 340
		--f-wght-strong 580
		color-scheme dark
*::-webkit-scrollbar
	background var(--c-con-weak)
*::-webkit-scrollbar-thumb
	background var(--c-con-normal)
	border-radius 10px

// Layout sections
p
	margin 0 0 1em
hr
	border 1px solid var(--c-text-faint)
	margin 2em 0

// Lists
ol
ul
	list-style none
	margin 0
	padding 0
.md
	ol
	ul
		list-style-type initial
		margin 0 0 1em
		padding-inline-start 3ch
	li
		margin 0 0 0.75em
		& > ol
		& > ul
			margin-top 0.75em
menu
	padding 0

// Headers
h1
h2
h3
h4
h5
h6
	font-weight var(--f-wght-strong)
	line-height 1.25
	margin 0 0 1rem
	&:first-child
		margin-top 0
h1
	font-size 1.6em
	margin-top 3.2rem
h2
	font-size 1.4em
	margin-top 2.4rem
h3
	font-size 1.2em
	margin-top 1.6rem
h4
h5
h6
	font-size 1em

// Tables
th
	font-weight inherit
.md
	table
		border-collapse collapse
		border-radius 6px
		display inline-block
		font-size 12px
		font-feature-settings 'cv11' 1, 'tnum' 1
		margin 0 0 1em
		max-width 100%
		overflow-wrap normal
		white-space pre-wrap
		&:hover:not(:fullscreen)
			background var(--c-con-weak)
			cursor zoom-in
		&:fullscreen
			background var(--c-theme)
			border-radius 0
			color var(--c-text-strong)
			font-size inherit
			padding 1.5em
	th
	td
		padding 1em
		vertical-align top
	th
		border-bottom 1px solid var(--c-con-normal)
	td
		border-right 1px solid var(--c-con-normal)
		&:last-child
			border-right none

// Formatted text
a
	color inherit
	text-decoration none
address
cite
	font-style normal
sub
sup
	line-height 0
.md
	background var(--c-blend-normal)
	border-radius 10px
	overflow-wrap anywhere
	padding 1em
	a
		text-decoration underline
		&:hover
			color var(--c-hint-normal)
	a[href^='#']
	a[href^='/']
		text-decoration none
		&::before
			background var(--c-text-strong)
			border-radius 50%
			color var(--c-theme)
			content 'â†’'
			display inline
			font-size 0.9em
			font-style normal
			font-weight 900
			line-height 1
			margin-left 0.1em
			margin-right 0.5em
			padding 0 0.1em
		&:empty::before
			display none
		&:hover::before
			background var(--c-hint-normal)
	img
		border 1px solid transparent
		border-radius 6px
		&:hover
			border-color var(--c-hint-normal)

// Verbatim text
blockquote
	border-left 3px solid var(--c-text-weak)
	font-size 12px
	margin 0 0 0.5em 2px
	opacity 0.8
	padding-left 1em
code
pre
	font-family var(--f-type-mono)
	font-size 12px
	letter-spacing 0
code
	background var(--c-con-normal)
	border-radius 2px
	padding 1px 2px
	word-break break-all
	pre > &
		background none
pre
	background var(--c-con-normal)
	border 1px solid transparent
	border-radius 6px
	margin 0 0 1em
	padding 1em
	overflow auto
	&:hover:not(:fullscreen)
		border-color var(--c-hint-normal)
		cursor zoom-in
	&:fullscreen
		background var(--c-theme)
		color var(--c-text-strong)
		font-size 1rem
		padding 2em
kbd
	font inherit

// Spoilers
.md-spoiler-text
	background black
	border-radius 5px
	box-decoration-break clone
	-webkit-box-decoration-break clone
	color transparent
	cursor default
	padding 1px 4px
	*
		opacity 0
	&:hover
		background var(--c-con-normal)
		color inherit
		*
			opacity 1

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit
details
	margin 0 0 0.5em
summary
	margin 0 0 0.5em
	padding 4px
	&:hover::marker
		color var(--c-hint-normal)
	details[open] &
		color var(--c-text-weak)

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%