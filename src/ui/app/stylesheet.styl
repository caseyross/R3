// Baseline resets
*
	box-sizing border-box
	margin 0
	&:focus
		outline-color gold

// Typography
@font-face
	font-family 'Arimo'
	font-style normal
	font-weight 400 700
	src url('../../vendor/arimo_400_700.ttf')
@font-face
	font-family 'Arimo'
	font-style italic
	font-weight 400 700
	src url('../../vendor/arimo_400_700_i.ttf')
html
	font 14.5px/1.5 'Arimo', 'Arial', sans-serif
	letter-spacing 0.125pt // 1/6 pixel
code
pre
	font 12px/1.5 monospace
	letter-spacing 0
.md
	h1
	h2
	h3
	h4
	h5
	h6
		line-height 1.1666
		margin 1em 0 0.5em
		&:first-child
			margin-top 0
	h1
		font-size 1.4em
		font-weight var(--f-wght-xstrong)
		letter-spacing -0.25pt
	h2
		font-size 1.3em
		font-weight var(--f-wght-strong)
		letter-spacing -0.125pt
	h3
		font-size 1.2em
		font-weight var(--f-wght-strong)
		letter-spacing -0.125pt
	h4
	h5
	h6
	b
	em
	strong
		font-size 1em
		font-weight var(--f-wght-strong)
		letter-spacing 0

// Theme
body
	--c-subreddit-theme-default #cee3f8
	--c-subreddit-theme-secondary-default orangered
	--c-subreddit-theme-text-default black
	font-weight var(--f-wght-normal)
.color-strategy-black-text
	--c-blend-weak rgba(0,0,0,0.05)
	--c-blend-normal rgba(0,0,0,0.10)
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-normal rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-con-xstrong rgba(255,255,255,0.80)
	--c-hint-normal cornflowerblue
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong black
	--c-text-reverse white
	--f-wght-normal 400
	--f-wght-strong 600
	--f-wght-xstrong 700
	color-scheme light
.color-strategy-white-text
	--c-blend-weak rgba(255,255,255,0.05)
	--c-blend-normal rgba(255,255,255,0.10)
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-normal rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-con-xstrong rgba(0,0,0,0.80)
	--c-hint-normal wheat
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong white
	--c-text-reverse black
	--f-wght-normal 350
	--f-wght-strong 550
	--f-wght-xstrong 650
	color-scheme dark
*::-webkit-scrollbar
	background var(--c-blend-weak)
*::-webkit-scrollbar-thumb
	background var(--c-blend-normal)
	border-radius 12px

// Layout sections
p
	margin 0 0 0.666em
hr
	border 0
	border-bottom 1px solid
	margin 1em auto
	opacity 0.8
menu
	padding 0
fieldset
	border 0
	padding 0

// Lists
ol
ul
	list-style none
	margin 0
	padding 0
.md
	ol
	ul
		margin 0 0 0.666em
	ol
		counter-reset list
		& li
			counter-increment list
	li
		margin 0 1ch 0.333em
		padding-inline-start 1ch
		&::marker
			content '-'
		& > ol
		& > ul
			margin 0.333em 0
		ol > &
			margin-left 2ch
		ol > &::marker
			color var(--c-text-weak)
			content counter(list)

// Tables
.md
	table
		border-collapse collapse
		font-size 12px
		line-height 16px
		margin 0 0 1em
		overflow-wrap normal
	td
	th
		padding 0 2ch 1ch 0
		text-align left
	td
		vertical-align top
	th
		font-weight var(--f-wght-strong)
		font-size 10px
		letter-spacing 0.333px
		vertical-align bottom

// Formatted text
a
	color inherit
	text-decoration none
	&:hover
		color var(--c-hint-normal)
address
cite
	font-style normal
sub
sup
	line-height 0
.md
	overflow-wrap anywhere
	& > :last-child
		margin-bottom 0
	a
		text-decoration underline
	img
		margin 1.333em 0

// Verbatim text
blockquote
	border-left 4px solid var(--c-text-faint)
	color var(--c-text-weak)
	font-size 13px
	margin 0 0 0.666rem
	padding-left 1ch
	& > :last-child
		margin-bottom 0
code
	background var(--c-con-normal)
	border-radius 2px
	padding 1px 2px
	word-break break-all
	pre > &
		background none
		padding 0
pre
	background var(--c-con-normal)
	border 1px solid transparent
	border-radius 6px
	margin 0 0 1em
	padding 0 1em
	overflow auto
	white-space pre-line
kbd
	font inherit

// Spoilers
.md-spoiler-text
	background black
	border-radius 5px
	box-decoration-break clone
	-webkit-box-decoration-break clone
	color transparent
	cursor default
	padding 1px 4px
	*
		opacity 0
	&:hover
		background var(--c-con-normal)
		color inherit
		*
			opacity 1

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit
details
	margin 0 0 0.5em
summary
	&:hover::marker
		color var(--c-hint-normal)
	details[open] &
		color var(--c-text-weak)

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%