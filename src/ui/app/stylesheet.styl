// Baseline resets
*
	box-sizing border-box
	margin 0
	&:focus
		outline-color gold
	&:last-child
		margin-bottom 0 !important

// Type
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../../vendor/inter_100_900.woff2')
html
	font-size 14px
body
	--f-type-prop 'Inter', sans-serif
	--f-type-mono 'Roboto Mono', 'Cascadia Mono', 'Consolas', monospace
	font-family var(--f-type-prop)
	font-feature-settings 'cv11'
	font-size 1rem
	font-weight var(--f-wght-normal)
	letter-spacing 0.1666px
	line-height 1.5

// Theme
body
	--c-subreddit-theme-default #cee3f8
	--c-subreddit-theme-secondary-default orangered
	--c-subreddit-theme-text-default black
.color-strategy-black-text
	--c-blend-normal rgba(0,0,0,0.10)
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-normal rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-hint-normal cornflowerblue
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong black
	--c-text-reverse white
	--f-wght-normal 440
	--f-wght-strong 560
	--f-wght-xstrong 640
	color-scheme light
.color-strategy-white-text
	--c-blend-normal rgba(255,255,255,0.10)
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-normal rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-hint-normal wheat
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong white
	--c-text-reverse black
	--f-wght-normal 400
	--f-wght-strong 530
	--f-wght-xstrong 560
	color-scheme dark
*::-webkit-scrollbar
	background var(--c-con-weak)
*::-webkit-scrollbar-thumb
	background var(--c-con-normal)
	border-radius 10px

// Layout sections
p
	margin 0 0 0.666em
hr
	border 0
	border-bottom 1px solid
	margin 1em auto
	opacity 0.8

// Headers
.md
	h1
	h2
	h3
	h4
	h5
	h6
		font-weight var(--f-wght-strong)
		letter-spacing -0.1666px
		line-height 1.333
		margin 1.666rem 0 0.666rem
		&:first-child
			margin-top 0
	h1
		font-size 1.333em
	h2
		font-size 1.25em
	h3
		font-size 1.1666em
	h4
	h5
	h6
		font-size 1em
		letter-spacing 0
	strong
	b
		font-weight var(--f-wght-strong)
		letter-spacing 0

// Lists
menu
	padding 0
ol
ul
	list-style none
	margin 0
	padding 0
.md
	ol
	ul
		margin 0 0 0.666em
	li
		margin 0 1ch 0.333em
		padding-inline-start 1em
		&::marker
			content '⁕'
		& > ol
		& > ul
			margin-top 0.333em

// Tables
.md
	table
		border-collapse collapse
		font-size 12px
		font-feature-settings 'cv11', 'tnum'
		margin 0 0 1em
		overflow-wrap normal
	td
	th
		padding-right 2ch
		text-align left
	td
		padding-top 3px
		vertical-align middle
	tr:first-child > td
		padding-top 6px
	th
		border-bottom 1px solid
		font-weight var(--f-wght-strong)
		font-size 10px
		letter-spacing 0.333px
		padding-bottom 3px
		vertical-align bottom

// Formatted text
a
	color inherit
	text-decoration none
	&:hover
		color var(--c-hint-normal)
address
cite
	font-style normal
sub
sup
	line-height 0
.md
	overflow-wrap anywhere
	a
		text-decoration underline
	img
		border-radius 6px
		max-height 480px

// Verbatim text
blockquote
	border-left 4px solid var(--c-text-faint)
	color var(--c-text-weak)
	font-size 13px
	margin 0 0 0.666rem
	padding-left 1ch
code
pre
	font-family var(--f-type-mono)
	font-size 12px
code
	background var(--c-con-normal)
	border-radius 2px
	padding 1px 2px
	word-break break-all
	pre > &
		background none
pre
	background var(--c-con-normal)
	border 1px solid transparent
	border-radius 6px
	margin 0 0 1em
	padding 1em
	overflow auto
	white-space pre-line
kbd
	font inherit

// Spoilers
.md-spoiler-text
	background black
	border-radius 5px
	box-decoration-break clone
	-webkit-box-decoration-break clone
	color transparent
	cursor default
	padding 1px 4px
	*
		opacity 0
	&:hover
		background var(--c-con-normal)
		color inherit
		*
			opacity 1

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit
details
	margin 0 0 0.5em
summary
	&:hover::marker
		color var(--c-hint-normal)
	details[open] &
		color var(--c-text-weak)

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%