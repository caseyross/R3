script.
	export name = null
	
	description = switch name
		when 'archived' then 'This post is archived due to old age. No votes can be cast on comments, and no new comments can be added.'
		when 'locked' then 'This post has been locked by a moderator. No new comments can be added.'
		when 'nsfw' then 'This post is marked as Not Safe For Work.'
		when 'oc' then 'This post is marked as Original Content.'
		when 'spoiler' then 'This post contains spoilers.'
		when 'sticky' then 'This post has been stickied by a moderator. It will remain here until unstickied.'
		else ''

data.post-tag(class='post-tag-{name}' title={description}) {name}

style.
	.post-tag
		align-items center
		border-radius 99px
		display inline-flex
		font-feature-settings 'calt', 'cpsp'
		font-size 10px
		font-weight var(--f-wght-strong)
		letter-spacing 1px
		line-height 1
		height 20px
		padding 0 0.666rem
		text-transform uppercase
		user-select none
		white-space nowrap
	.post-tag-archived
		background tan
		color white
	.post-tag-locked
		background gray
		color white
	.post-tag-nsfw
		background indianred
		color white
	.post-tag-oc
		background var(--c-fixed-user)
		color white
	.post-tag-spoiler
		background black
		color white
	.post-tag-sticky
		background var(--c-fixed-mod)
		color white