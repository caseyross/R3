script.
	import { createEventDispatcher } from 'svelte'
	
	import { virtual_hotkeys } from '../../action/hotkeys.coffee'

	dispatch = createEventDispatcher()
	hotkeys =
		'Escape': -> dispatch('close')

.popup(role='dialog' use:virtual_hotkeys={hotkeys})
	<!-- svelte-ignore a11y-no-static-element-interactions -->
	.popup-overlay(on:mousedown={() => dispatch('close')})
	<!-- svelte-ignore a11y-autofocus -->
	.popup-body(autofocus)
		slot

