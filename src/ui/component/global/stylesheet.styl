// Imports
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../../../vendor/inter_100_900.woff2')

// Baseline resets
*
	box-sizing border-box
	margin 0
	&:focus
		outline-color gold
	&::-webkit-scrollbar
		background var(--c-blend-weak)
	&::-webkit-scrollbar-thumb
		background var(--c-blend-normal)
		border-radius 12px

// Base layout & theme
html
	font 15px 'Inter'
	font-feature-settings 'ss01'
	line-height 1.5
	scrollbar-gutter stable both-edges // doesn't work on <body>
body
	background-color var(--c-subreddit-theme)
	color var(--c-subreddit-theme-text)
	display grid
	font-weight var(--f-wght-normal)
	grid-auto-flow row
	grid-template-columns 1fr
	padding 4em 2em
	place-items center
	--c-admin red
	--c-hint-normal wheat
	--c-link mediumslateblue
	--c-link-visited mediumpurple
	--c-mod darkseagreen
	--c-op #c3e0ff
	--c-score-0 #e3e6eb
	--c-score-1 antiquewhite
	--c-score-2 wheat
	--c-score-3 lightsalmon
	--c-score-4 coral
	--c-subreddit-theme-default white
	--c-subreddit-theme-secondary-default coral
	--c-subreddit-theme-text-default black
.color-strategy-black-text
	color-scheme light
	--c-bg white
	--c-blend-weak rgba(0,0,0,0.05)
	--c-blend-normal rgba(0,0,0,0.10)
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-normal rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-con-xstrong rgba(255,255,255,0.80)
	--c-text-xfaint rgba(0,0,0,0.125)
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong #333
	--c-text-reverse white
	--f-wght-normal 450
	--f-wght-strong 650
	--f-wght-xstrong 700
.color-strategy-white-text
	color-scheme dark
	--c-bg #333
	--c-blend-weak rgba(255,255,255,0.05)
	--c-blend-normal rgba(255,255,255,0.10)
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-normal rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-con-xstrong rgba(0,0,0,0.80)
	--c-text-xfaint rgba(255,255,255,0.125)
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong white
	--c-text-reverse black
	--f-wght-normal 400
	--f-wght-strong 600
	--f-wght-xstrong 650

// Typography
a
	color inherit
	text-decoration none
	.md &
		color var(--c-link)
		border-bottom 1px solid
		&:hover
			color var(--c-hint-normal)
		&:visited
			color var(--c-link-visited)
address
	font-style normal
blockquote
	border-left 2px solid var(--c-text-xfaint)
	color var(--c-text-weak)
	font-size 13px
	margin 0 0 1rem
	padding-left 0.666em
	& > :last-child
		margin-bottom 0
cite
	font-style normal
code
	word-break break-all
kbd
	font inherit
pre
	margin 0 0 1em
	overflow auto
	white-space pre-line
sub
sup
	line-height 0
.md
	h1
	h2
	h3
	h4
	h5
	h6
		font-weight var(--f-wght-xstrong)
		margin 1em 0
		&:first-child
			margin-top 0
	h1
		font-size 32px
		line-height 40px
	h2
		font-size 30px
		line-height 40px
	h3
		font-size 24px
		line-height 32px
	h4
		font-size 20px
		line-height 28px
	h5
	h6
		font-size 18px
		line-height 26px
	b
	strong
		font-weight var(--f-wght-xstrong)
.md-spoiler-text
	background black
	border-radius 5px
	color transparent
	cursor default
	*
		opacity 0
	&:hover
		background var(--c-con-normal)
		color inherit
		*
			opacity 1

// General layout
.md
	overflow-wrap anywhere
	& > :last-child
		margin-bottom 0
	img
		border-radius 5px
		margin 0 0 1em
p
	margin 0 0 1em
hr
	border 0
	border-bottom 1px solid
	margin 1em auto
	opacity 0.8
	width 100%
menu
	padding 0
fieldset
	border 0
	padding 0

// Lists
ol
ul
	list-style none
	margin 0
	padding 0
.md
	ol
	ul
		margin 0 0 1em
	ol
		counter-reset list
		& li
			counter-increment list
	li
		margin 0 1ch 0.333em
		padding-inline-start 1ch
		&::marker
			content '-'
		&:last-child
			margin-bottom 0
		& > ol
		& > ul
			margin 0.333em 0
		ol > &
			margin-left 2ch
		ol > &::marker
			color var(--c-text-weak)
			content counter(list)

// Tables
.md
	table
		border-collapse collapse
		font-feature-settings 'ss01', 'tnum'
		font-size 12px
		letter-spacing 0.5px
		margin 0 0 1em
		overflow-wrap normal
	td
	th
		padding 0.5em 0
		padding-right 1em
		text-align left
		&:last-child
			padding-right 0
	td
		border-top 1px solid var(--c-text-faint)
		vertical-align top
	th
		font-weight var(--f-wght-strong)
		font-size 10px
		letter-spacing 1px
		text-transform uppercase
		vertical-align bottom

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit
details
	margin 0 0 0.5em
summary
	&:hover::marker
		color var(--c-hint-normal)
	details[open] &
		color var(--c-text-weak)

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%