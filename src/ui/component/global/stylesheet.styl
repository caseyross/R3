// Imports
@font-face
	font-family 'Arimo'
	font-style normal
	font-weight 400 700
	src url('../../../vendor/arimo_400_700.ttf')
@font-face
	font-family 'Arimo'
	font-style italic
	font-weight 400 700
	src url('../../../vendor/arimo_400_700_i.ttf')
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../../../vendor/inter_100_900.woff2')

// Resets
*
	box-sizing border-box
	margin 0
	&:focus
		outline-color gold
	&::-webkit-scrollbar
		background var(--c-blend-weak)
	&::-webkit-scrollbar-thumb
		background var(--c-blend-normal)
		border-radius 12px

// Base layout & theme
html
	font 15px/1.5 'Arimo', 'Arial', 'Helvetica', sans-serif
	scrollbar-gutter stable both-edges // doesn't work on <body>
body
	background-color var(--c-bg)
	color var(--c-text-strong)
	display grid
	grid-auto-flow row
	grid-template-columns 1fr
	padding 4em 2em
	place-items center
	--c-admin orangered
	--c-hint-normal wheat
	--c-mod darkseagreen
	--c-op #c3e0ff
	--c-score-0 #e3e6eb
	--c-score-1 antiquewhite
	--c-score-2 wheat
	--c-score-3 lightsalmon
	--c-score-4 salmon
	--c-subreddit-theme-default #cee3f8
	--c-subreddit-theme-secondary-default orangered
	--c-subreddit-theme-text-default black
.color-strategy-black-text
	color-scheme light
	--c-bg white
	--c-blend-weak rgba(0,0,0,0.05)
	--c-blend-normal rgba(0,0,0,0.10)
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-normal rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-con-xstrong rgba(255,255,255,0.80)
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong #333
	--c-text-reverse white
	--f-wght-normal 400
	--f-wght-strong 500
	--f-wght-xstrong 600
.color-strategy-white-text
	color-scheme dark
	--c-bg #333
	--c-blend-weak rgba(255,255,255,0.05)
	--c-blend-normal rgba(255,255,255,0.10)
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-normal rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-con-xstrong rgba(0,0,0,0.80)
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong white
	--c-text-reverse black
	--f-wght-normal 350
	--f-wght-strong 450
	--f-wght-xstrong 550

// Typography
pre
	font 12px/1.5 monospace
	letter-spacing 0
.md
	h1
	h2
	h3
	h4
	h5
	h6
		letter-spacing 0
		line-height 1.333
		margin 1em 0 0.5em
		&:first-child
			margin-top 0
	h1
		font-size 1.8em
		font-weight 700
		letter-spacing -1.333px
	h2
		font-size 1.55em
		font-weight 650
		letter-spacing -1px
	h3
		font-size 1.15em
		font-weight 600
		letter-spacing -0.333px
	h4
	h5
	h6
		font-size 1em
		font-weight 550

// Layout sections
p
	margin 0 0 0.666em
hr
	border 0
	border-bottom 1px solid
	margin 1em auto
	opacity 0.8
menu
	padding 0
fieldset
	border 0
	padding 0

// Lists
ol
ul
	list-style none
	margin 0
	padding 0
.md
	ol
	ul
		margin 0 0 0.666em
	ol
		counter-reset list
		& li
			counter-increment list
	li
		margin 0 1ch 0.333em
		padding-inline-start 1ch
		&::marker
			content '-'
		& > ol
		& > ul
			margin 0.333em 0
		ol > &
			margin-left 2ch
		ol > &::marker
			color var(--c-text-weak)
			content counter(list)

// Tables
.md
	table
		border-collapse collapse
		font-size 12px
		line-height 16px
		margin 0 0 1em
		overflow-wrap normal
	td
	th
		padding 0 2ch 1ch 0
		text-align left
	td
		border-top 1px solid var(--c-text-faint)
		vertical-align top
	th
		font-weight var(--f-wght-strong)
		font-size 10px
		letter-spacing 0.333px
		vertical-align bottom

// Formatted text
a
	color inherit
	text-decoration none
	&:hover
		color var(--c-hint-normal)
address
cite
	font-style normal
sub
sup
	line-height 0
.md
	overflow-wrap anywhere
	& > :last-child
		margin-bottom 0
	a
		text-decoration underline
	img
		margin 1.333em 0

// Verbatim text
blockquote
	border-left 4px solid var(--c-text-faint)
	color var(--c-text-weak)
	font-size 13px
	margin 0 0 0.666rem
	padding-left 1ch
	& > :last-child
		margin-bottom 0
code
	word-break break-all
pre
	background var(--c-con-normal)
	border 1px solid transparent
	border-radius 6px
	margin 0 0 1em
	padding 0 1em
	overflow auto
	white-space pre-line
kbd
	font inherit

// Spoilers
.md-spoiler-text
	background black
	border-radius 5px
	color transparent
	cursor default
	*
		opacity 0
	&:hover
		background var(--c-con-normal)
		color inherit
		*
			opacity 1

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit
details
	margin 0 0 0.5em
summary
	&:hover::marker
		color var(--c-hint-normal)
	details[open] &
		color var(--c-text-weak)

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%