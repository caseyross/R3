// Imports
@font-face
	font-family 'Inter'
	font-style normal italic
	font-weight 100 900
	src url('../../../vendor/inter_100_900.woff2')

// Baseline resets
*
	box-sizing border-box
	margin 0
	&:first-child
		margin-top 0 !important
	&:focus
		outline-color gold
	&::-webkit-scrollbar
		background var(--c-blend-weak)
	&::-webkit-scrollbar-thumb
		background var(--c-blend-normal)
		border-radius 12px

// Page structure & theme
html
	font-size 15px // declared here for em/rem sizing
body
	background-color var(--c-bg)
	color var(--c-text-strong)
	display grid
	font-family 'Inter'
	font-feature-settings 'ss01'
	font-weight var(--f-wght-normal)
	grid-auto-flow row
	grid-template-columns 1fr
	letter-spacing calc(1px/6)
	line-height calc(5/3)
	margin-inline-start calc(100vw - 100%) // compensate for scrollbar offset (would prefer `scrollbar-gutter` but it has big issues)
	padding 48px 24px
	place-items center
	--c-admin red
	--c-hint-normal wheat
	--c-link mediumslateblue
	--c-link-visited mediumpurple
	--c-mod darkseagreen
	--c-op #c3e0ff
	--c-score-0 #e3e6eb
	--c-score-1 antiquewhite
	--c-score-2 wheat
	--c-score-3 lightsalmon
	--c-score-4 coral
	--c-subreddit-theme-default coral
	--c-subreddit-theme-secondary-default coral
	--c-subreddit-theme-text-default white
.color-strategy-black-text
	color-scheme light
	--c-bg white
	--c-bg-component var(--c-op)
	--c-blend-weak rgba(0,0,0,0.05)
	--c-blend-normal rgba(0,0,0,0.10)
	--c-blend-strong rgba(0,0,0,0.50)
	--c-con-weak rgba(255,255,255,0.05)
	--c-con-normal rgba(255,255,255,0.10)
	--c-con-strong rgba(255,255,255,0.50)
	--c-con-xstrong rgba(255,255,255,0.80)
	--c-text-xfaint rgba(0,0,0,0.125)
	--c-text-faint rgba(0,0,0,0.25)
	--c-text-weak rgba(0,0,0,0.50)
	--c-text-strong black
	--c-text-reverse white
	--f-wght-normal 450
	--f-wght-strong 650
	--f-wght-xstrong 750
.color-strategy-white-text
	color-scheme dark
	--c-bg #222
	--c-bg-component #333
	--c-blend-weak rgba(255,255,255,0.05)
	--c-blend-normal rgba(255,255,255,0.10)
	--c-blend-strong rgba(255,255,255,0.50)
	--c-con-weak rgba(0,0,0,0.05)
	--c-con-normal rgba(0,0,0,0.10)
	--c-con-strong rgba(0,0,0,0.50)
	--c-con-xstrong rgba(0,0,0,0.80)
	--c-text-xfaint rgba(255,255,255,0.125)
	--c-text-faint rgba(255,255,255,0.25)
	--c-text-weak rgba(255,255,255,0.50)
	--c-text-strong white
	--c-text-reverse black
	--f-wght-normal 400
	--f-wght-strong 600
	--f-wght-xstrong 750

// General layout & typography
a
	color inherit
	text-decoration none
	.md &
		background var(--c-subreddit-theme)
		border-radius 3px
		color var(--c-subreddit-theme-text)
		padding 1px 6px
		&:empty
			display none
address
	font-style normal
blockquote
	border-left 2px solid var(--c-text-xfaint)
	color var(--c-text-weak)
	font-size 13px
	line-height 1.333
	margin 1rem 0 0
	padding-left 1em
cite
	font-style normal
code
	word-break break-all
fieldset
	border 0
	padding 0
kbd
	font inherit
hr
	border 0
	border-bottom 1px solid
	margin 1em auto 0
	width 100%
menu
	padding 0
p
	margin 1em 0 0
pre
	margin 1em 0 0
	overflow auto
	white-space pre-line
sub
sup
	line-height 0
.md
	overflow-wrap anywhere
	h1
	h2
	h3
	h4
	h5
	h6
		margin 1.5em 0 0
	h1
		font-size 2em
		font-weight 500
		line-height 1
	h2
		font-size 1.5em
		font-weight 450
		line-height 1.1666
	h3
		font-size 1.25em
		font-weight 400
		line-height 1.333
	h4
	h5
	h6
	b
	strong
		font-weight var(--f-wght-strong)
.md-spoiler-text
	background black
	border-radius 5px
	color transparent
	cursor default
	*
		opacity 0
	&:hover
		background var(--c-con-normal)
		color inherit
		*
			opacity 1

// Lists
ol
ul
	list-style none
	padding 0
.md
	ol
	ul
		counter-reset list
		margin 1em 0 0
	li
		counter-increment list
		margin 1em 0 0
		margin-left 2ch
		padding-left 2ch
		position relative
		&::before
			align-items center
			background var(--c-blend-normal)
			border-radius 999px
			content counter(list)
			display inline-flex
			font-feature-settings 'ss01', 'tnum'
			font-size 12px
			font-weight bold
			justify-content center
			padding 0 0.5em
			position absolute
			right 100%
			top 0
			white-space pre
	ul > li
		margin-left 1em
		padding-left 1em
	ul > li::before
		background none
		content 'â€¢'

// Tables
.md
	table
		border-collapse collapse
		font-feature-settings 'ss01', 'tnum'
		font-size 12px
		font-weight 350
		letter-spacing 0.666px
		line-height 1.333
		margin 1.333rem 0 0
		overflow-wrap normal
	td
	th
		padding 0.5em
		text-align left
	td
		border 1px solid var(--c-text-faint)
		vertical-align top
	th
		border 1px solid transparent
		border-bottom 0
		font-weight var(--f-wght-strong)
		font-size 10px
		letter-spacing 1px
		text-transform uppercase
		vertical-align bottom

// Interactive
button
input
select
summary
	background inherit
	border 0
	color inherit
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	text-transform inherit
	user-select none
	word-spacing inherit
details
	margin 1em 0 0
summary
	&:hover::marker
		color var(--c-hint-normal)
	details[open] &
		color var(--c-text-weak)

// Media
iframe
	border 0
img
video
	box-sizing content-box
	display block
	max-width 100%
.md img
	border 1px solid var(--c-text-strong)
	border-radius 1em
	margin 1em 0 0
	margin-inline-start -1px