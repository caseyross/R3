script.
	import api from '../../../api/index.js'

	import SubredditInfo from '../subreddit/SubredditInfo.pug'
	import SubredditRules from '../subreddit/SubredditRules.pug'
	
	import UserAvatar from '../user/UserAvatar.pug'
	
	export type = null
	
	export collection_short_id = null
	export multireddit_name = null
	export subreddit_name = null
	export user_name = null
	
	error = null
	info = null
	switch type
		when 'collection'
			api.loadWatch(api.ID('collection', collection_short_id), (x) ->
				{ data: info, error } = x
			)
		when 'multireddit'
			api.loadWatch(api.ID('multireddit', user_name, multireddit_name), (x) ->
				{ data: info, error } = x
			)
		when 'subreddit'
			api.loadWatch(api.ID('subreddit', subreddit_name), (x) ->
				{ data: info, error } = x
			)
		when 'user'
			api.loadWatch(api.ID('user', user_name), (x) ->
				{ data: info, error } = x
			)

{#if error}
	.list-info-card.list-info-card-unavailable
{:else if info}
	{#if type === 'collection'}
		a.list-info-card(href='/c/{collection_short_id}')
			section.list-info-card-avatar
				img.list-info-card-avatar-image(alt='')
				.list-info-card-avatar-owner-image
					UserAvatar(name={info.author_name})
			section.list-info-card-data
				span.list-info-card-list-type Collection
				strong.list-info-card-list-name {info.title}
	{:else if type === 'multireddit'}
		a.list-info-card(href='/m/{user_name}/{multireddit_name}')
			section.list-info-card-avatar
			section.list-info-card-data
				span.list-info-card-list-type Multireddit
				strong.list-info-card-list-name {user_name}/{multireddit_name}
	{:else if type === 'subreddit'}
		a.list-info-card(href='/{subreddit_name}' style='display:flex')
			section.list-info-card-avatar
				{#if info.community_icon || info.icon_img}
					img.list-info-card-avatar-image(alt='' src={info.community_icon || info.icon_img})
			section.list-info-card-data(style='display:none')
				span.list-info-card-list-type Subreddit
				strong.list-info-card-list-name(title={info.display_name}) {info.display_name}
	{:else if type === 'user'}
		a.list-info-card(href='/u/{user_name}')
			section.list-info-card-avatar
				{#if info.profile_img}
					img.list-info-card-avatar-image(alt='' src={info.profile_img})
			section.list-info-card-data
				span.list-info-card-list-type User
				strong.list-info-card-list-name {user_name}

style.
	.list-info-card
		align-items center
		border-radius 1em
		display grid
		gap 10px
		grid-template-columns 64px 216px
	.list-info-card-avatar
		position relative
		width 64px
	.list-info-card-avatar-image
		aspect-ratio 1
		border-radius 50%
		object-fit cover
		width 100%
	.list-info-card-avatar-owner-image
		bottom -10px
		position absolute
		right 0
	.list-info-card-data
		display flex
		flex-flow column nowrap
	.list-info-card-list-name
		font-size 1.5em
	.list-info-card-list-type
		color var(--c-text-weak)