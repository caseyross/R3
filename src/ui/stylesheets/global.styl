// Single-direction margin
*
	margin-bottom 0
*:first-child
	margin-top 0

// General
html
	font 400 14px/1.4 'test', sans-serif
*:focus
	outline-color gold

// Body
body
	align-items center
	display flex
	flex-flow column nowrap
	margin 0

// Paragraphs
p
	margin-top 0.66em
	word-break break-word
hr
	background rgba(0,0,0,0.5)
	border 0
	height 1px
	margin-inline 0
	margin-top 0.66em

// Verbatim text
a
	color mediumslateblue
	font-weight 500
	text-decoration none
	word-break break-word
	& img
		cursor zoom-in
blockquote
	border-left 1px solid gainsboro
	margin 0
	margin-top 0.66em
	opacity 0.66
	padding-inline-start 2ch
pre
	display inline-block
	margin-top 0.66em
	white-space pre-wrap

// Spoilers
.md-spoiler-text
	padding 0.25em 0
	background gray
	color gray
	&:focus, &:hover
		background initial
		color initial

// Lists
li
	margin-top 0.66em
ol
	list-style decimal
	margin-top 0.66em
	padding-inline-start 2ch
ul
	list-style disc
	margin-top 0.66em
	padding-inline-start 2ch

// Headers
h1
	font-size 1.25em
	font-weight normal
	margin-top 1em
h2
h3
h4
h5
h6
	font-size 1.16em
	font-weight normal
	margin-top 1em

// Tables
table
	border-collapse collapse
	margin-top 0.66em
td
th
	border 1px solid
	padding 0.5ch
	padding-left 0.75ch
th
	font-weight normal
	text-align left

// Media
figure
	margin 0
iframe
	background black
	border 0
img
	background black
	display block

// Interactive
button
	border 0
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit
input
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit

// Fonts
@font-face
	font-family 'test'
	font-style normal
	font-weight 400
	src url('../assets/fonts/test.woff2') format('woff2')