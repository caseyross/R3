// Single-direction margin
*
	margin-bottom 0
*:first-child
	margin-top 0

// General
html
	font 400 14px/1.333 'tex gyre heros', 'helvetica', 'helvetica neue', 'arial', sans-serif
	letter-spacing 0.666px
*:focus
	outline-color gold

// Body
body
	align-items center
	display flex
	flex-flow column nowrap
	margin 0

// Paragraphs
p
	margin-top 0.66em
hr
	background rgba(0,0,0,0.5)
	border 0
	height 1px
	margin-inline 0
	margin-top 0.66em

// Verbatim text
a
	color mediumslateblue
	font-weight 500
	text-decoration none
blockquote
	border-left 2px solid gainsboro
	margin 0
	margin-inline-start 1ch
	margin-top 0.66em
	opacity 0.66
	padding-inline-start 1ch
pre
	display inline-block
	margin-top 0.66em
	white-space pre-wrap

// Spoilers
.md-spoiler-text
	background rgba(0,0,0,1)
	cursor text
	padding 0.05em 0
	opacity 0.5
	& a
		opacity 0
	&:hover
		background rgba(0,0,0,0)
		opacity 1
		& a
			opacity 1

// Lists
li
	margin-top 0.66em
ol
	list-style decimal
	margin-top 0.66em
	padding-inline-start 2ch
ul
	list-style disc
	margin-top 0.66em
	padding-inline-start 2ch

// Headers
h1
	font-size 1.25em
	font-weight normal
	margin-top 1em
h2
h3
h4
h5
h6
	font-size 1.16em
	font-weight normal
	margin-top 1em

// Tables
table
	border-collapse collapse
	margin-top 0.66em
td
th
	border 1px solid
	padding 0.5ch
	padding-left 0.75ch
th
	font-weight normal
	text-align left

// Media
figure
	margin 0
iframe
	background black
	border 0
img
	background black
	display block

// Interactive
button
	border 0
	cursor pointer
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit
input
	font inherit
	letter-spacing inherit
	line-height inherit
	padding 0
	word-spacing inherit

// Fonts
@font-face
	font-family 'tex gyre heros'
	font-style normal
	font-weight 400
	src url('../assets/fonts/font_tex_gyre_heros_400.otf') format('opentype')
@font-face
	font-family 'tex gyre heros'
	font-style italic
	font-weight 400
	src url('../assets/fonts/font_tex_gyre_heros_400_ital.otf') format('opentype')
@font-face
	font-family 'tex gyre heros'
	font-style normal
	font-weight 700
	src url('../assets/fonts/font_tex_gyre_heros_700.otf') format('opentype')
@font-face
	font-family 'tex gyre heros'
	font-style italic
	font-weight 700
	src url('../assets/fonts/font_tex_gyre_heros_700_ital.otf') format('opentype')