script.
	import PostFlair from './PostFlair.pug'
	import Post from './Post.coffee'
	export post = {}

{#if post instanceof Post}
	.meta
		a.subreddit(href='/r/{post.subredditName}')
			span.r r
			span {post.subredditName}
		PostFlair(flair={post.titleFlair})
	.title {post.title}

style.
	.meta
		margin-bottom 2px
	.subreddit
		border 1px solid
		padding 1px 8px
		border-radius 4px
		background linear-gradient(120deg, rgba(0,0,0,0.5) 12px, transparent 16px)
		.r
			vertical-align top
			font-size 10px
			font-weight bold
			color white
			margin-right 8px
			
	.title
		font-size 15px