script.
	import Placard from '../user/Placard.pug'
	import PostFlair from './PostFlair.pug'
	import SubredditTag from '../subreddit/SubredditTag.pug'
	import Post from './Post.coffee'
	export post = {}
	export showFlair = false

{#if post instanceof Post}
	.feed-post
		.tags
			span
			{#if showFlair}
				PostFlair(flair={post.titleFlair} subredditName={post.subredditName})
			{:else}
				SubredditTag(name={post.subredditName})
		.title
			{#if post.content.type === 'link'}
				a(href={post.content.href}) {post.title}
			{:else}
				| {post.title}
		.data
			Placard(score={post.score} name={post.authorName} flair={post.authorFlair} subredditName={post.subredditName} role={post.authorRole})
			span.time {post.createDate.ago().count}{post.createDate.ago().unit}

style.
	.feed-post
		position relative
		padding 1ch 2ch
	.title
		font-size 18px
	.tags
		position absolute
		top -3rem
		width 100%
		padding 0 2em
		display flex
		justify-content space-between
		align-items flex-end
	.data
		font 400 10pt 'Iosevka Aile Web'
		display flex
		justify-content space-between