script.
	import MoreComments from './MoreComments.pug'
	import Placard from '../user/Placard.pug'
	import Comment from './Comment.coffee'
	export comment = {}

{#if comment instanceof Comment}
	.comment
		.meta
		.main
			Placard(score={comment.score} name={comment.authorName} flair={comment.authorFlair} subredditName={comment.subredditName} role={comment.authorRole})
			{@html comment.content}
			.replies
				{#if comment.replies}
					{#each comment.replies as reply}
						svelte:self(comment={reply})


style.
	.comment
		margin-top 1em
		position relative
		display grid
		grid-template-columns 24px 1fr
	:global(.replies > .comment)
		margin-top 0.5em
	.meta
		padding-right 1ch
		color rgba(0,0,0,0.5)
		text-align right
	.replies
		border-left 1px solid lightgray