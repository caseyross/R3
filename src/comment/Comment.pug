script.
	import MoreComments from './MoreComments.pug'
	import Placard from '../user/Placard.pug'
	import Comment from './Comment.coffee'
	export comment = {}

{#if comment instanceof Comment}
	.comment
		.meta
			span {comment.score.text}
		.main
			{@html comment.content}
			.body-meta
				span
				Placard(name={comment.authorName} flair={comment.authorFlair} subredditName={comment.subredditName} role={comment.authorRole})
			.replies
				{#if comment.replies}
					{#each comment.replies as reply}
						svelte:self(comment={reply})

style.
	.comment
		margin-top 1em
		display grid
		grid-template-columns 49px 64ch
	:global(.replies > .comment)
		margin-top 0.5em
	.meta
		padding-right 1ch
		color rgba(0,0,0,0.5)
		text-align right
	.body-meta
		display none
		flex-flow column nowrap
		justify-content space-between
	.replies
		border-left 1px solid lightgray